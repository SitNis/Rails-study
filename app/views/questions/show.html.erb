<h1>Question</h1>

<p>Вопрос из теста <%= @question.test.title%></p>
<p><%= @question.title%></p>

<h2>Answers</h2>

<%= link_to "New answer", new_question_answer_path(@question) %>

<ol>
    <%= render @question.answers %>
</ol>

<%= link_to "Delete", 
    question_path(@question), 
    method: "delete",
    data: { confirm: 'Are you sure?'} %>
<%= link_to "Back", test_path(@question.test) %>
<%= link_to "Edit", edit_question_url(@question) %>
